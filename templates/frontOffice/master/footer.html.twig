<footer class="webintern-footer">
    <div class="pl-footer">

        <div class="ft-logo">
            <label>Foodepia</label>
        </div>

        <div class="pl-footer-inside"></div>
    </div>

    <div class="webintern-footer-inner">
        <div class="container">
            <div class="row">

                <div class="col-lg-5 col-md-3 col-sm-6">
                    <!--
                       <span class="webintern-footer-logo">
                            <label>FOODEPIA</label>
                       </span>
                   -->
                    <div class="simple-text dark padding-sm">
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
                        </p>
                    </div>
                    <div class="empty-space xs-25 sm-25"></div>
                </div>

                <div class="col-lg-3 col-md-3 col-sm-6">
                    <!-- webintern_footer_title -->
                    <h4 class="webintern_footer_title h5"><small>{% trans %}Opportunities{% endtrans %}</small></h4>
                    <ul class="webintern-footer-list">
                        <li>
                            <a class="footer-link" href="{{ path('registrationDriver') }}" data-value="0">{{ 'Driver registration'|trans }}</a>
                        </li>
                        <li>
                            <a class="footer-link" href="{{ path('registrationPartner') }}" data-value="1">{% trans %}Partner{% endtrans %}</a>
                        </li>
                    </ul>
                    <div class="empty-space xs-25 sm-25"></div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6">
                    <!-- webintern_footer_title -->
                    <h4 class="webintern_footer_title h5"><small>{% trans %}Customer{% endtrans %}</small></h4>
                    <ul class="webintern-footer-list">
                        <li>
                            <a class="footer-link" href="{{ path('registrationCustomer') }}" data-value="2">{% trans %}Customer registration{% endtrans %}</a>
                        </li>
                        <li>
                            <a class="footer-link" href="{{ path('contact') }}" data-value="1">{{ 'Contact us'|trans }}</a>
                        </li>
                    </ul>
                    <div class="empty-space xs-25 sm-25"></div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6">
                    <!-- webintern_footer_title -->
                    <h4 class="webintern_footer_title h5"><small>{% trans %}Language{% endtrans%}</small></h4>
                    <ul class="webintern-footer-list">
                        <li>
                            <ul class="tp-list nbr ml-2">
                                <li class="dropdown dropdown-currency hidden-xs hidden-sm">
                                {% for locale in locales %}
                                    {%  if locale != app.request.locale  %}
                                            <a href="{{ path('change_locale',{'locale':locale}) }}" class="text-white font-weight-bold">{{ locale }}</a>
                                    {% endif %}
                                {% endfor %}

                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="empty-space xs-25 sm-25"></div>
                </div>

            </div>
        </div>
    </div>
    <div class="tt-copy">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="tt-copy-left">Copyright Â© 2021. All rights reserved. Foodepia.com</div>
                </div>
                <div class="col-sm-6">
                    <div class="tt-copy-right">
{#                        Created by : <span>oualid jennani</span>#}
                    </div>
                </div>
            </div>

        </div>
    </div>
</footer>