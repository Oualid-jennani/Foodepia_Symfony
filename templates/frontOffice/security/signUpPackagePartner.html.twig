{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <!-- =========================== Breadcrumbs =================================== -->
    <div class="breadcrumbs_wrap dark">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12 col-sm-12 ">
                    <div class="text-center">
                        <h2 class="breadcrumbs_title">{% trans %}Register{% endtrans %}</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="ti-home"></i></a></li>
                                <li class="breadcrumb-item" aria-current="page">{% trans %}Chef registration{% endtrans %}</li>
                                <li class="breadcrumb-item active" aria-current="page">{% trans %}Package{% endtrans %}</li>
                            </ol>
                        </nav>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- =========================== Breadcrumbs =================================== -->

    <!-- ======================== Features Accessiries Start ==================== -->
    <section>
        <div class="container">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="sec-heading center">
                        <span class="theme-cl">{% trans %}Exclusive Offers{% endtrans %}</span>
                        <h2>{% trans %}Choose Your Membership{% endtrans %}</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                {% if Packages is not empty %}
                    {% for Package in Packages %}

                        {% set PackageName = '' %}

                        {% if Package.name|upper == 'PROFESSIONAL' %}
                            {% set PackageName = 'featured' %}
                        {% endif %}

                        <div class="col-lg-4 col-md-4 col-sm-12 mx-auto">
                            <div class="card pricing {{ PackageName }}">
                                <div class="card-body">
                                    <small class="text-muted">{{ Package.name|upper }}</small>
                                    <h5 class="card-title">$<span>{{ Package.price }}</span></h5>
                                    <p class="card-text"></p>
                                    <ul class="list-unstyled">
                                        <li>{{ Package.type }}</li>
                                        <li>{{ Package.packUsage }}</li>
                                        <li>{{ Package.description }}</li>
                                    </ul>
                                    <a href="{{ path('registrationChefInfo',{'id':Package.id}) }}"  class="btn btn-xl btn-outline-primary">{% trans %}Choose This Plan{% endtrans %}</a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>


{% endblock %}



